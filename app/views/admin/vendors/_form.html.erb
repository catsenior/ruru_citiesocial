<%= form_with(model: [:admin, vendor]) do |form| %>
  <div class="field">
    <%= form.label :name, '名稱', class: 'label' %>
    <%= form.text_field :name, class: 'input' %>
  </div>

  <div class="field">
    <%= form.label :address, '地址', class: 'label' %>
    <%= form.text_area :address, class: 'textarea' %>
  </div>

  <div class="field">
    <%= form.label :tel, '電話', class: 'label' %>
    <%= form.text_area :tel, class: 'textarea' %>
  </div>

  <div class="field">
    <%= form.label :description, '說明', class: 'label' %>
    <%= form.text_area :description, class: 'textarea' %>
  </div>

  <div class="field">
    <%= form.check_box :online %>
    <%= form.label :online, '正常營運中？', class: 'checkbox' %>
  </div>

  <%= form.submit class: 'button is-primary is-medium' %>
<% end %>